<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.alltoons.root.webtoon.report.mapper.ReviewReportMapper">
		
	<resultMap id="review" type="com.alltoons.root.webtoon.review.dto.ReviewDTO">
		<result property="reviewNum" column="review_num" />
		<result property="userImage" column="user_image" />
		<result property="userEmail" column="user_email" />
		<result property="reviewContent" column="review_content" />
		<result property="reviewTime" column="review_time" />
	</resultMap>
	
	
	<insert id="setReport">
		insert into report_info(report_num, user_email, report_content, review_num)
		values(review_num_seq.nextval, #{reportUserEmail}, #{reportContent}, #{reviewNum})
	</insert>
	
	<select id="getMyreportChk" resultMap="review">
		select *
		from report_info
		where review_num = #{reviewNum} and user_email like #{userEmail}
	</select>
</mapper>
